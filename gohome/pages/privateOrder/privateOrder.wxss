/* pages/privateOrder/privateOrder.wxss */
page {
  background: #eee;
  padding: 10rpx 0rpx;
}
.item-block {
  position: relative;
  width: 730rpx;
  height: 210rpx;
  overflow: hidden;
  margin: auto;
  margin-bottom: 10rpx;
}
.refund {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 4;
  background: red;
  width: 210rpx;
  height: 210rpx;
  color: white;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order-block {
  position: absolute;
  top: 0;
  height: 210rpx;
  z-index: 5;
  width: 100%;
  display: flex;
  background: white;
  overflow: hidden;
  transition: left 0.4s ease-in-out;
}
.block-left {
  float: left;
  padding: 20rpx;
}
.block-left image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.block-right {
  float: right;
  width: 100%;
  height: 100%;
}
.bus-name {
  font-size: 35rpx;
  margin-left:15%; 
}
.status {
  font-size: 25rpx;
  color: #777;
  float: right;
  margin: 10rpx 30rpx 0rpx 0rpx;
}
.detail-list {
  display: flex;
}
.detail-text{
  width: 450rpx;
  font-size: 25rpx;
  color: #777;
  padding-bottom: 5rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap; 
}
.icon{
  width: 18rpx;
  height: 20rpx;
  border-radius: 50%;
  margin: 10rpx 40rpx 0rpx 20rpx;
}
.none-block {
  width: 250rpx;
  margin: auto;
  margin-top: 40%;
}
.none-block image {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  display: block;
}
.none-text {
  display: flex;
  font-size: 50rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  color: #777;
}
.text-word {
  color:  #7e74a9;
}
.toindex {
  font-size: 35rpx;
  text-align: center;
  color: #777;
}
.none-block button {
  width: 200rpx;
  height: 70rpx;
  margin-top: 50rpx;
  border-radius: 0rpx;
  color: white;
  background: #7e74a9;
  font-size: 30rpx;
}