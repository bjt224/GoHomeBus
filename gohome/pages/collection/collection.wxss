/* pages/collection/collection.wxss */
page {
  background: #eee;
}
.mark-list {
  position: relative;
  display: flex;
  width: 93%;
  margin: auto;
  margin-top: 10rpx;
  background: white; 
  padding: 10rpx; 
}
.logo {
  border-radius:50%;
  border: 1rpx #eee dashed; 
  height: 150rpx;
  width: 150rpx;
  margin: 10rpx ;
}
.bus-name { 
  text-align: center;
  margin-top:50rpx;
  margin-left: 100rpx;
  font-weight: bold;
  font-size: 45rpx;
}
.mark {
  position: absolute;
  right: 40rpx;
  top: 0rpx;
  width: 80rpx;
  height: 90rpx;
}
