/* pages/orderList/orderList.wxss */
page {
  background: #eee;
}
.header {
  margin: auto;
  height: 150rpx;
  display: flex;
  background: white;
  padding: 0rpx 50rpx;
  border-bottom: 1rpx rgb(212, 206, 206) solid;
}
.logo {
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  border: 1rpx #eee dashed;
  margin: 10rpx 10rpx 0rpx 80rpx;
}
.marks {
  position: absolute;
  top: 0rpx;
  right: 20rpx;
  width: 80rpx;
  height: 90rpx;
}
.header view {
  margin-left: 10%;
  margin-top: 40rpx;
  font-size: 50rpx;
}
.bottom {
  background: #eee;
}
.order-block {
  position: relative;
  margin:10rpx auto;
  width: 92%;
  border-radius:20rpx; 
  background: white;
  padding: 20rpx;
}
.block-top {
  border-bottom: 1rpx solid #eee; 
  padding-bottom: 10rpx;
}
.origin {
  font-size:30rpx; 
}
.time {
  display: flex;
}
.time text {
  font-size: 25rpx;
  padding: 15rpx;
}
.calendar {
  height: 40rpx;
  width: 40rpx;
  margin: 10rpx;
}
.site {
  display: flex;
}
.site text {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap; 
  width: 50%;
  font-size: 25rpx;
}
.site-icon{
  width: 18rpx;
  height: 20rpx;
  border-radius: 50%;
  margin: 10rpx 40rpx 0rpx 20rpx;
}
.pricing {
  position: absolute;
  right: 60rpx;
  top: 65rpx;
  display: flex;
}
.rmb {
  margin-top: 27rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
}
.money {
  font-size: 50rpx;
  margin: auto;
}
.pricing-text {
  margin-top: 25rpx;
  margin-left: 10rpx;
  color: #777;
  font-size: 25rpx; 
}
.block-bottom {
  display: flex;
  padding-top:10rpx; 
  color: #777;
  font-size: 25rpx;
}
.site-list {
  width: 70%;
  margin: 0rpx 10rpx;
}
.saleMessage{ 
  /* margin-top: 5rpx; */
  margin-left:20rpx; 
}
.block-bottom-hide{
 display: none;
}
.site-detail-list {
  padding-top:15rpx; 
  display: flex;
  position: relative;
}
.site-detail-hide{
   display: none;
}
.destination-icon {
  height: 30rpx;
  width: 30rpx;
  margin: 15rpx;
}
.destination {
  width: 300rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap; 
  padding-top: 10rpx;
  font-size: 30rpx;
}
.pricing-detail {
  display: flex;
  position: absolute;
  top: 20rpx;
  right: 250rpx;
}
.pricing-detail .money {
  font-size: 35rpx;
}
.pricing-detail .rmb {
  margin-top: 15rpx;
}
.buy {
  position: absolute;
  top:25rpx;
  right: 10rpx;
  height: 40rpx;
  width: 120rpx;
  border-radius: 35rpx;
  background: rgb(81, 216, 81);
  font-size: 30rpx;
  text-align: center;
  color: white; 
}
.none-block {
  width: 250rpx;
  margin: auto;
  margin-top: 30%;
}
.none-block image {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  display: block;
}
.none-text {
  display: flex;
  font-size: 50rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  color: #777;
}
.text-word {
  color:  #7e74a9;
}
.toindex {
  font-size: 35rpx;
  text-align: center;
  color: #777;
}
.none-block button {
  width: 200rpx;
  height: 70rpx;
  margin-top: 50rpx;
  border-radius: 0rpx;
  color: white;
  background: #7e74a9;
  font-size: 30rpx;
}