/* pages/personProject/personProject.wxss */
page {
  height: 100%;
}
.order-detail {
  display: flex;
  height: 14%;
  padding-bottom: 10rpx;
}
.header-right {
  width: 100%;
}
.hint {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
}
.hint image {
  height: 60rpx;
  width: 60rpx;
  margin-right:10rpx; 
}
.bus-sign {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin: 25rpx 30rpx 0rpx 20rpx;
}
.title {
  margin-top: 15rpx;
  display: block;
  font-size: 35rpx; 
  margin-bottom: 3rpx;
}
.bus-detail {
  font-size: 25rpx;
  color: #777;
}

#detail-map {
  width: 100%;
  height: 86%;
}
.sign-in {
  position: absolute;
  bottom: 40rpx;
  left: 37%;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  padding: 50rpx;
  opacity: 0.8;
}
.user-location{
  position: relative;
  top: 85%;   
  left: 5%;
  width: 65rpx;
}
.map-img {  
  width: 65rpx;
  height: 65rpx;
}
.detail-list {
  display: flex;
}
.detail-text{
  font-size: 25rpx;
  color: #777;
  padding-bottom: 5rpx;
}
.icon{
  width: 18rpx;
  height: 20rpx;
  border-radius: 50%;
  margin: 5rpx 20rpx 0rpx 20rpx;
}
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items:center;         
  background-color:rgba(0, 0, 0, 0.4);
  z-index: 998;
}
.mask-center {
  z-index: 999;
  width: 80%;
  height: 900rpx;
  border-radius: 20rpx;
  background: white;
}
.mask-center swiper {
  width: 90%;
  height: 650rpx;
  margin: auto;
  /* background: #eee; */
}
.description {
  text-align: center;
  margin: 20rpx;
  padding: 0rpx 20rpx;
  font-size: 25rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}

